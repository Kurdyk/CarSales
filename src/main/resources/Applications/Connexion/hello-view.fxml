    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Car vendor App" />
   <TextField fx:id="idField" promptText="Username" />
   <PasswordField fx:id="passwordField" promptText="Password" />

    <Label fx:id="welcomeText" />
   <HBox alignment="CENTER" prefHeight="55.0" prefWidth="342.0" spacing="50.0">
      <children>
         <Button alignment="CENTER" graphicTextGap="0.0" mnemonicParsing="false" onAction="#onConnexionButtonClick" text="Connexion" />
         <Button mnemonicParsing="false" text="Forgot password ?" />
      </children>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <padding>
         <Insets left="25.0" />
      </padding>
   </HBox>
</VBox>
